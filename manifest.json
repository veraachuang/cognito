{
  "manifest_version": 3,
  "name": "Cognito",
  "version": "1.0",
  "description": "Cursor for Docs",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "*://localhost/*",
    "https://docs.google.com/*",
    "https://www.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "${GOOGLE_CLIENT_ID}",
    "scopes": [
      "https://www.googleapis.com/auth/documents.readonly",
      "https://www.googleapis.com/auth/drive.readonly"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src *://localhost/* http://127.0.0.1:*/ https://www.googleapis.com/"
  },
  "action": {
    "default_popup": "frontend/html/popup.html",
    "default_icon": {
      "16": "frontend/assets/icon16.png",
      "48": "frontend/assets/icon48.png",
      "128": "frontend/assets/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["frontend/js/content.js"],
      "css": ["frontend/css/styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["frontend/html/sidebar.html", "frontend/js/sidebar.js", "frontend/css/sidebar.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "frontend/assets/icon16.png",
    "48": "frontend/assets/icon48.png",
    "128": "frontend/assets/icon128.png"
  }
} 