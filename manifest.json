{
  "manifest_version": 3,
  "name": "Cognito",
  "version": "1.0",
  "description": "AI-powered writing assistant for Google Docs",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src http://localhost:5000"
  },
  "action": {
    "default_popup": "frontend/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["frontend/content.js"],
      "css": ["frontend/styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["frontend/sidebar.html", "frontend/sidebar.js", "frontend/styles.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 